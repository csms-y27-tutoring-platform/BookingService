{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "Infrastructure": {
    "Persistence": {
      "Postgres": {
        "Database": "BookingService",
        "Host": "localhost",
        "Port": 5433,
        "Username": "postgres",
        "Password": "postgres"
      }
    },
    "GrpcClients": {
      "TutorService": {
        "Address": "http://localhost:5004"
      }
    }
  },
  "Presentation": {
    "Kafka": {
      "Connection": {
        "Host": "localhost:9092",
        "SecurityProtocol": "PLAINTEXT"
      },
      "Producers": {
        "BookingCreatedTopic": "booking-created",
        "BookingCancelledTopic": "booking-cancelled",
        "BookingCompletedTopic": "booking-completed"
      }
    }
  }
}